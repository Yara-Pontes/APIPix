@* _Layout.cshtml *@
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PAYAPI</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            background-color: #f4f4f4;
            min-height: 100vh;
            margin: 0;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #343a40;
            position: fixed;
            top: 0;
            left: 0;
            transition: all 0.3s ease;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar.collapsed {
            width: 65px;
        }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.9);
            display: flex;
            align-items: center;
            padding: 10px 20px;
            transition: padding 0.3s;
        }

        .sidebar.collapsed .nav-link {
            justify-content: center;
            padding: 10px 0;
        }

        .sidebar .nav-link .icon {
            font-size: 20px;
            margin-right: 10px;
            width: 25px;
            text-align: center;
        }

        .sidebar.collapsed .nav-link .text {
            display: none;
        }

        .sidebar .nav-link:hover {
            background-color: #495057;
            text-decoration: none;
        }

        /* Toggle Button Styles */
        .toggle-btn {
            position: fixed;
            top: 15px;
            left: 12px;
            z-index: 1100;
            color: white;
            background-color: black;
            border: none;
            width: 30px;
            height: 35px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .toggle-btn i {
            font-size: 20px;
        }

        .toggle-btn:hover {
            background-color: #333333;
        }

        /* Header Styles */
        .header {
            width: calc(100% - 250px);
            height: 60px;
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
            position: fixed;
            top: 0;
            left: 250px;
            transition: left 0.3s, width 0.3s;
            z-index: 900;
            display: flex;
            justify-content: space-between; /* Alinhamento dos elementos */
            align-items: center;
            padding: 0 20px; /* Ajuste do padding */
        }

        .header.collapsed {
            left: 65px;
            width: calc(100% - 65px);
        }

        /* Content Styles */
        .content {
            margin-left: 250px;
            margin-top: 60px;
            padding: 20px;
            transition: margin-left 0.3s ease;
            flex: 1;
            overflow-y: auto;
            width: calc(100% - 250px);
        }

        .content.collapsed {
            margin-left: 65px;
            width: calc(100% - 65px);
        }

        /* Responsiveness */
        @@media (max-width: 768px) {
            .sidebar {
                left: -250px; 
            }

            .sidebar.active {
                left: 0; 
            }

            .header {
                left: 0; 
                width: 100%; 
            }

            .content {
                margin-left: 0; 
                width: 100%;
                margin-top: 60px;
            }
        }

        /* Custom Chart Style */
        #myChart {
            width: 100% !important; /* Para garantir que ocupe 100% */
            height: 400px; /* Altura do gráfico */
        }

        /* Header User Info Styles */
        .header .user-info {
            display: flex;
            align-items: center;
        }

        .header .balance {
            color: #343a40; /* Cor do texto do saldo */
            font-size: 1.1rem; /* Tamanho do texto do saldo */
            margin-right: 15px; /* Espaço entre o saldo e o ícone do usuário */
        }

        .header .dropdown {
            position: relative; /* Garante que o dropdown funcione corretamente */
        }

        .header .dropdown-menu {
            min-width: 150px; /* Largura mínima do dropdown */
        }

        /* Efeitos visuais */
        .dropdown-menu {
            border-radius: 0.25rem; /* Bordas arredondadas */
        }

        .dropdown-item:hover {
            background-color: #f8f9fa; /* Cor de fundo ao passar o mouse */
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <nav class="navbar navbar-dark mt-5">
            <ul class="navbar-nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/DashBoard">
                        <i class="fa fa-dashboard icon"></i>
                        <span class="text">Painel</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Relatorios">
                        <i class="fa fa-bar-chart icon"></i>
                        <span class="text">Relatórios</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Analytics">
                        <i class="fa fa-line-chart icon"></i>
                        <span class="text">Analytics</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Financeiro">
                        <i class="fa fa-money icon"></i>
                        <span class="text">Financeiro</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Configuracoes">
                        <i class="fa fa-cogs icon"></i>
                        <span class="text">Configurações</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Logs">
                        <i class="fa fa-file-text icon"></i>
                        <span class="text">Logs</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Suporte">
                        <i class="fa fa-life-ring icon"></i>
                        <span class="text">Suporte</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Documentacao">
                        <i class="fa fa-file icon"></i>
                        <span class="text">Documentação</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Header -->
    <header class="header" id="header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="user-info d-flex align-items-center">
                <span class="balance">
                    <strong>Saldo:</strong> R$ <span id="accountBalance">0,00</span>
                </span>
            </div>
            <div class="dropdown">
                <a href="#" class="dropdown-toggle d-flex align-items-center" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-user-circle-o fa-2x"></i>
                    <span class="ml-2 d-none d-md-inline">@User.Identity.Name</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="@Url.Action("Profile", "Account")">Perfil</a>
                    <a class="dropdown-item" href="@Url.Action("Logout", "Account")">Logout</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main role="main" class="content" id="content">
        @RenderBody()
    </main>

    <!-- Toggle Button -->
    <button class="toggle-btn" id="toggleButton">
        <i class="fa fa-bars"></i>
    </button>
    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            const header = document.getElementById('header');
            const toggleButton = document.getElementById('toggleButton');
            const icon = toggleButton.querySelector('i');

            toggleButton.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                content.classList.toggle('collapsed');
                header.classList.toggle('collapsed');
                updateIcon();
            });

            function updateIcon() {
                if (sidebar.classList.contains('collapsed')) {
                    icon.classList.remove('fa-bars');
                    icon.classList.add('fa-chevron-right'); // Usando um ícone diferente
                } else {
                    icon.classList.remove('fa-chevron-right');
                    icon.classList.add('fa-bars');
                }
            }
        });
    </script>
</body>
</html>
