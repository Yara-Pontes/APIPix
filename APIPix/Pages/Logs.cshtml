@page
@model APIPix.Pages.LogsModel
@{
    ViewData["Title"] = "Logs";
}

<div class="container mt-4">
    <h2>Logs da API</h2>

    <h4>Transações Recentes</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Data/Hora</th>
                <th>Valor</th>
                <th>Status</th>
                <th>Remetente</th>
                <th>Destinatário</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.RecentTransactions)
            {
                <tr>
                    <td>@transaction.DateTime</td>
                    <td>R$ @transaction.Amount</td>
                    <td>@transaction.Status</td>
                    <td>@transaction.Sender</td>
                    <td>@transaction.Receiver</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Erros Recentes</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Data/Hora</th>
                <th>Código do Erro</th>
                <th>Mensagem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var error in Model.RecentErrors)
            {
                <tr>
                    <td>@error.DateTime</td>
                    <td>@error.ErrorCode</td>
                    <td>@error.Message</td>
                </tr>
            }
        </tbody>
    </table>
</div>
